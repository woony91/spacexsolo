<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.DetailFragment">

        <ImageView
            android:id="@+id/iv_rocket"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/rocket"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_mission_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mission Name"
            style="@style/Title"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_rocket"/>

        <TextView
            android:id="@+id/tv_rocket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rocket Name"
            style="@style/Text"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_mission_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_launch_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Launch Site Name"
            style="@style/Text"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_rocket_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_launch_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Launch"
            style="@style/Text"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_launch_site"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_mission_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mission Details"
            style="@style/Text"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_launch_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
